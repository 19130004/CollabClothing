			contentType: "application/json; charset=utf-8",
			type: "get", //send it through get method
			data: {
				exits: amount
			},
			success: function (data) {
				var row = document.getElementById('content3');
				row.innerHTML += data;
			},
			error: function (xhr) {

			}
		});
	}
</script>
}