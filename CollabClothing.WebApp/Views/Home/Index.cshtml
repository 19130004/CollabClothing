							featurePart = new List<ProductViewModel>();
						}
					}
					@for (int i = 0; i < featureProducts.Count; i++)
					{
		 <div class="carousel-item @(i==0 ? "active":"")">
		  <div class="row">
								@foreach  (var item in featureProducts[i])
