				   <a href="#">(4,585 ratings)</a>
				  </div>
												@{
													var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

												}
				  <div class="tcb-hline"></div>
				  <div class="tcb-product-price">
													@String.Format(format, "{0:c0}", @item.PriceCurrent )
				  </div>
