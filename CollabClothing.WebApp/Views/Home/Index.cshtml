@using CollabClothing.ViewModels.Catalog.Products
@using Microsoft.Extensions.Configuration
@model HomeViewModel
@{
	ViewData["Title"] = "Trang chủ";
}
@section Csss {
<link rel="stylesheet" type="text/css" href="~/assets/css/grid.css">
<link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/index.css" />

}
@inject IConfiguration Configuration;
<div class="grid wide">
 <!-- Banner -->
	@await Component.InvokeAsync("Banner");
 <!-- Product Futured -->
	@await Component.InvokeAsync("ProductFeatured");
 <!-- Child Category Woman -->
	@await Component.InvokeAsync("CategoryChildMenu", "d93e95a9-38bd-4011-a457-29a763189a81")
 <!-- Filter Product -->
	@await Component.InvokeAsync("Filter")
 <!-- Product -->
	@await Component.InvokeAsync("ProductOutStanding", "d93e95a9-38bd-4011-a457-29a763189a81")

 <div class="col l-12 m-12 c-12">
  <div class="container-view-more">
   <button class="container-btn-extend" onclick="loadMore1()">Xem thêm</button>
  </div>
 </div>


 <!-- Men clothing -->
 <div class="row container__item">
		@await Component.InvokeAsync("BannerPartial", "56b0670f-8f60-422e-ad77-0dc1dfbe9d05")
		@await Component.InvokeAsync("CategoryChildMenu", "82AAE383-3EDF-45F0-AA5B-9B4A514EA7A9")

  <!-- Filter Product -->
		@await Component.InvokeAsync("Filter")

		@await Component.InvokeAsync("ProductOutStanding", "82AAE383-3EDF-45F0-AA5B-9B4A514EA7A9")

  <div class="col l-12 m-12 c-12">
   <div class="container-view-more">
	<button class="container-btn-extend" onclick="loadMore2()">Xem thêm</button>
   </div>
  </div>
 </div>

 <!-- Child Clothing -->
 <div class="row container__item">
		@await Component.InvokeAsync("BannerPartial", "24eeaba6-b27a-4f9e-a9b7-807befb20a14")
		@await Component.InvokeAsync("CategoryChildMenu", "29919101-ff6c-466f-907b-66a2f669be7f")

  <!-- Filter Product -->
		@await Component.InvokeAsync("Filter")

		@await Component.InvokeAsync("ProductOutStanding", "29919101-ff6c-466f-907b-66a2f669be7f")

  <div class="col l-12 m-12 c-12">
   <div class="container-view-more">
	<button class="container-btn-extend" onclick="loadMore3()">Xem thêm</button>
   </div>
  </div>
 </div>
</div>

@section Scripts {
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"
		integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script>
		function loadMore1() {
		var amount = document.getElementsByClassName('productCount').length;
		jQuery.ajax({
			url: 'danh-muc/load/b1d5cf80-70b8-4504-bb80-2cbfcf1d8600',
			contentType: "application/json; charset=utf-8",
			type: "get", //send it through get method
			data: {
				exits: amount
			},
			success: function (data) {
				var row = document.getElementById('content');
				row.innerHTML += data;
			},
			error: function (xhr) {

			}
		});
	}
	function loadMore2() {
		var amount = document.getElementsByClassName('productCount2').length;
		jQuery.ajax({
			url: 'danh-muc/load/2a809ece-5ee5-4cb2-bdb4-ba98c6e8022d',
			contentType: "application/json; charset=utf-8",
			type: "get", //send it through get method
